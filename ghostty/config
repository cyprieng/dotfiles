# UI
font-size = 15
font-thicken = true
theme = catpuccin 
mouse-hide-while-typing = true
macos-titlebar-style = hidden
confirm-close-surface = false
quit-after-last-window-closed = true

# Shell
shell-integration-features = true
initial-command = /opt/homebrew/bin/tmux new-session -A -D

## Keybindings
macos-option-as-alt = false

# Command + Left -> Home
keybind = super+left=text:\x01

# Command + Right -> End
keybind = super+right=text:\x05

# Undo
keybind = super+z=text:\x1f

# Redo
keybind = super+shift+z=esc:e

# Control + Shift + Up -> Page Up
keybind = ctrl+shift+up=csi:5~

# Control + Shift + Down -> Page Down
keybind = ctrl+shift+down=csi:6~

# Claude new line 
keybind = shift+enter=text:\x1b\r

# Quick terminal
keybind = ctrl+t=toggle_quick_terminal
quick-terminal-position = center
